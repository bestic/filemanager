<div class="file-manager-list">

  <table class="table">
    <thead>
    <tr>
      <th style="width: 40%">File Name</th>
      <th style="width: 20%">File Type</th>
      <th style="width: 20%">Size (Kb)</th>
      <th style="width: 20%">Action</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>
        <div class="form-group">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Type to filter">
            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
          </div>
        </div>
      </td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    </tbody>
  </table>


  <div class="global-actions clearfix">
    <div class="global-actions-leftgroup pull-left">
      <button class="btn btn-default">
        <span class="glyphicon glyphicon-list"></span>
        File List
      </button>
      <button class="btn btn-default">
        <span class="glyphicon glyphicon-bookmark"></span>
        Bookmarks
      </button>
    </div>
    <div class="global-actions-leftgroup pull-right">
      <button class="btn btn-default">
        <span class="glyphicon glyphicon-upload"></span>
        Upload
      </button>
      <button class="btn btn-default">
        <span class="glyphicon glyphicon-plus"></span>
        Create New
      </button>
    </div>
  </div>

</div>


